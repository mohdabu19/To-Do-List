import os

FILE_NAME = "tasks.txt"

def load_tasks():
    if not os.path.exists(FILE_NAME):
        return []
    with open(FILE_NAME, "r") as file:
        return [line.strip() for line in file.readlines()]

def save_tasks(tasks):
    with open(FILE_NAME, "w") as file:
        for task in tasks:
            file.write(task + "\n")

def show_tasks(tasks, filter_type="all"):
    if not tasks:
        print("\nNo tasks found.\n")
        return

    print("\n------ TO-DO LIST ------")
    for i, task in enumerate(tasks, start=1):
        name, priority, due, status = task.split("|")

        if filter_type == "completed" and status != "Completed":
            continue
        if filter_type == "pending" and status != "Pending":
            continue

        print(f"{i}. {name} | Priority: {priority} | Due: {due} | Status: {status}")
    print()

def add_task(tasks):
    name = input("Enter task name: ")
    priority = input("Enter priority (High / Medium / Low): ")
    due_date = input("Enter due date (DD-MM-YYYY): ")

    task = f"{name}|{priority}|{due_date}|Pending"
    tasks.append(task)
    save_tasks(tasks)
    print("‚úÖ Task added successfully!\n")

def update_task(tasks):
    show_tasks(tasks)
    try:
        choice = int(input("Enter task number to update: ")) - 1
        name = input("Enter new task name: ")
        priority = input("Enter new priority: ")
        due_date = input("Enter new due date: ")
        status = input("Enter status (Pending / Completed): ")

        tasks[choice] = f"{name}|{priority}|{due_date}|{status}"
        save_tasks(tasks)
        print("‚úÖ Task updated successfully!\n")
    except:
        print("‚ùå Invalid input!\n")

def delete_task(tasks):
    show_tasks(tasks)
    try:
        choice = int(input("Enter task number to delete: ")) - 1
        tasks.pop(choice)
        save_tasks(tasks)
        print("‚úÖ Task deleted successfully!\n")
    except:
        print("‚ùå Invalid input!\n")

def main():
    tasks = load_tasks()

    while True:
        print("===== ADVANCED TO-DO LIST =====")
        print("1. Add Task")
        print("2. View All Tasks")
        print("3. View Completed Tasks")
        print("4. View Pending Tasks")
        print("5. Update Task")
        print("6. Delete Task")
        print("7. Exit")

        choice = input("Enter your choice: ")

        if choice == "1":
            add_task(tasks)
        elif choice == "2":
            show_tasks(tasks)
        elif choice == "3":
            show_tasks(tasks, "completed")
        elif choice == "4":
            show_tasks(tasks, "pending")
        elif choice == "5":
            update_task(tasks)
        elif choice == "6":
            delete_task(tasks)
        elif choice == "7":
            print("üëã Exiting To-Do List Application")
            break
        else:
            print("‚ùå Invalid choice! Try again.\n")

main()
